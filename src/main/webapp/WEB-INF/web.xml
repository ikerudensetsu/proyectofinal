<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>controller.MenuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarPlatilloServlet</servlet-name>
        <servlet-class>controller.BuscarPlatilloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarritoServlet</servlet-name>
        <servlet-class>controller.CarritoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarCarritoServlet</servlet-name>
        <servlet-class>controller.AgregarCarritoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarProductoServlet</servlet-name>
        <servlet-class>controller.EliminarProductoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmarPedidoServlet</servlet-name>
        <servlet-class>controller.ConfirmarPedidoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmarpedidoServlet</servlet-name>
        <servlet-class>controller.ConfirmarpedidoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FinalizarPedidoServlet</servlet-name>
        <servlet-class>controller.FinalizarPedidoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/MenuServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarPlatilloServlet</servlet-name>
        <url-pattern>/BuscarPlatilloServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarritoServlet</servlet-name>
        <url-pattern>/CarritoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarCarritoServlet</servlet-name>
        <url-pattern>/AgregarCarritoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarProductoServlet</servlet-name>
        <url-pattern>/EliminarProductoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmarPedidoServlet</servlet-name>
        <url-pattern>/ConfirmarPedidoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmarpedidoServlet</servlet-name>
        <url-pattern>/ConfirmarpedidoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FinalizarPedidoServlet</servlet-name>
        <url-pattern>/FinalizarPedidoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
